<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.LoanSummary">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:id="@+id/loanDetailsCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="16dp">

                <TextView
                    android:id="@+id/tvLoanProduct"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toStartOf="@id/tvStatus"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tvLoanId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tvLoanProduct" />

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_status_chip"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="6dp"
                    android:paddingBottom="6dp"
                    android:textColor="@android:color/white"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/tvLoanProduct"
                    app:layout_constraintBottom_toBottomOf="@id/tvLoanId" />

                <View
                    android:id="@+id/divider"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:background="?android:attr/listDivider"
                    android:layout_marginTop="16dp"
                    app:layout_constraintTop_toBottomOf="@id/tvLoanId"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"/>

                <TextView
                    android:id="@+id/labelAmountRequested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Amount Requested"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider" />

                <TextView
                    android:id="@+id/tvAmountRequested"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                    android:textColor="?attr/colorPrimary"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelAmountRequested"
                    app:layout_constraintBottom_toBottomOf="@id/labelAmountRequested" />

                <TextView
                    android:id="@+id/labelInterestRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Interest Rate"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelAmountRequested" />

                <TextView
                    android:id="@+id/tvInterestRate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelInterestRate" />

                <TextView
                    android:id="@+id/labelTenure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tenure"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelInterestRate" />

                <TextView
                    android:id="@+id/tvTenure"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelTenure" />

                 <TextView
                    android:id="@+id/labelSubmittedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Submitted On"
                    android:layout_marginTop="8dp"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/labelTenure" />

                <TextView
                    android:id="@+id/tvSubmittedAt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/labelSubmittedAt" />


            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>

        <TextView
            android:id="@+id/tvEmisLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EMIs"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/loanDetailsCard" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvEmis"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvEmisLabel"
            tools:listitem="@layout/item_emi"
            tools:itemCount="1"/>

        <TextView
            android:id="@+id/tvCoApplicantsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Co-Applicants"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvEmis" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvCoApplicants"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvCoApplicantsLabel"
            tools:listitem="@layout/item_co_applicant"
            tools:itemCount="1"/>

        <TextView
            android:id="@+id/tvGuarantorsLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Guarantors"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvCoApplicants" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvGuarantors"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvGuarantorsLabel"
            tools:listitem="@layout/item_guarantor"
            tools:itemCount="1"/>

        <TextView
            android:id="@+id/tvReferencesLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="References"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rvGuarantors" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvReferences"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvReferencesLabel"
            tools:listitem="@layout/item_reference"
            tools:itemCount="2"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
